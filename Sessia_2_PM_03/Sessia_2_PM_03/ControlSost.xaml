<Page x:Class="Sessia_2_PM_03.ControlSost"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sessia_2_PM_03"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControlSost">

    <Grid Background="White">
        <DataGrid>
        <DataGrid.Columns>
                <DataGridTextColumn Header="оборудование магистральных сетей" Width="80*" Binding="{Binding ФИО}" />
                <DataGridTextColumn Header="оборудование сетей доступа"  Width="80*" Binding="{Binding Номер_абонента}" />
                <DataGridTextColumn Header="оборудование абонента"  Width="80*" Binding="{Binding Лицевой_счет}"/>
        
        </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
