<Page x:Class="Sessia_2_PM_03.AbonentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sessia_2_PM_03"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AbonentsPage">

    <Grid Background="White">
        
        <DataGrid x:Name="GridAbonents" Margin="0,52,0,0" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding ФИО}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Абонентский номер" Binding="{Binding Номер_абонента}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Лицевой счет" Binding="{Binding Лицевой_счет}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Услуги" Binding="{Binding Услуги}" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Номер договора" Binding="{Binding Номер_договора}" Width="*"></DataGridTextColumn>

            </DataGrid.Columns>

        </DataGrid>
        <TextBlock HorizontalAlignment="Left" Margin="25,10,0,0" TextWrapping="Wrap" Text="Абоненты ТНС" VerticalAlignment="Top" FontSize="28"/>
    </Grid>
</Page>
